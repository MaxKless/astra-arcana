{
  "name": "astra-arcana",
  "displayName": "Astra Arcana",
  "description": "",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "astra-arcana.cast-spell",
        "title": "Cast Spell",
        "category": "Astra Arcana"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "nx": {
    "name": "vscode",
    "implicitDependencies": [
      "@astra-arcana/language-server"
    ],
    "targets": {
      "copy-language-server": {
        "command": "mkdir -p apps/vscode/dist/language-server && cp apps/language-server/dist/main.js apps/vscode/dist/language-server/main.js",
        "dependsOn": [
          "^build"
        ]
      },
      "build": {
        "dependsOn": [
          "copy-language-server"
        ]
      }
    }
  }
}
